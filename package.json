{
  "name": "tablehop",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently -n api,web -c blue,green \"npm:dev --workspace=apps/api\" \"npm:dev --workspace=apps/web\"",
    "dev:api": "npm run dev -w apps/api",
    "dev:web": "npm run dev -w apps/web",
    "build": "npm run build --workspaces",
    "build:api": "npm run build -w apps/api",
    "build:web": "npm run build -w apps/web",
    "start": "npm start -w apps/api",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "db:studio": "npm run db:studio -w apps/api",
    "db:push": "npm run db:push -w apps/api",
    "create-admin": "npm run create-admin -w apps/api",
    "create-neighbourhoods": "npm run create-neighbourhoods -w apps/api",
    "create-events": "npm run create-events -w apps/api",
    "docker:dev": "docker-compose up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:build": "docker-compose build",
    "docker:build:prod": "docker-compose -f docker-compose.prod.yml build",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:prod": "docker-compose -f docker-compose.prod.yml logs -f",
    "docker:down": "docker-compose down",
    "docker:down:prod": "docker-compose -f docker-compose.prod.yml down"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "private": "true",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0"
  }
}
